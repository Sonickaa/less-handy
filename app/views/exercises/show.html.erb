<div class="max-w-3xl mx-auto mt-10 px-4 space-y-6">
  <!-- Exercise Content -->
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h1 class="text-2xl md:text-3xl font-bold text-red-500 mb-3">
      <%= @exercise.name %>
    </h1>
    <p class="text-gray-700 text-base md:text-lg">
      <%= @exercise.description %>
    </p>
  </div>

  <!-- Navigation Links -->
  <div class="flex flex-wrap gap-4 mt-4">
    <%= link_to "Next Exercise", exercise_path, class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-5 rounded-lg shadow transition duration-300" %>
    <%= link_to "Home", root_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium py-2 px-5 rounded-lg transition duration-300" %>
  </div>
</div>
