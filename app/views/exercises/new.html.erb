<div class="max-w-3xl mx-auto mt-10 px-4 space-y-6">
  <h1 class="text-3xl font-bold text-red-500 mb-6">New Exercise</h1>

  <%= simple_form_for(@exercise, html: { class: "space-y-4" }) do |f| %>
    <div>
      <%= f.input :name, input_html: { class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500" } %>
    </div>

    <div>
      <%= f.input :description, input_html: { class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500" } %>
    </div>

    <div>
      <%= f.submit "Enter", class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-5 rounded-lg shadow transition duration-300" %>
    </div>
  <% end %>
</div>
