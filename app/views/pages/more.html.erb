<div class="max-w-3xl mx-auto mt-10 px-4 space-y-8">
  <!-- Exercise Links -->
  <div class="flex flex-col md:flex-row md:space-x-6 space-y-4 md:space-y-0">
    <h3 class="text-lg font-semibold text-blue-600 hover:text-blue-800 transition duration-200">
      <%= link_to "Create New Exercise", new_exercise_path %>
    </h3>
    <h3 class="text-lg font-semibold text-green-600 hover:text-green-800 transition duration-200">
      <%= link_to "All My Exercises", exercises_path %>
    </h3>
  </div>

  <!-- Tiny Art -->
  <div class="bg-white p-4 rounded-lg shadow-md">
    <p class="font-medium text-gray-700 mb-2">Random Tiny Art:</p>
    <%= render "shared/tiny_art" %>
  </div>

  <!-- Home Link -->
  <div class="mt-4">
    <%= link_to "Home", root_path, class: "inline-block bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium py-2 px-4 rounded transition duration-200" %>
  </div>
</div>
